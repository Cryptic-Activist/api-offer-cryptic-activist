{
  "name": "api-offer-cryptic-activist",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "cross-env NODE_ENV=development jest",
    "test:w": "jest --watch",
    "build": "tsup src",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "refresh": "rm -rf ./node_modules ./yarn.lock ./yarn-error.log && yarn install",
    "lint": "eslint --fix",
    "build:base-ca": "cd libraries/base-ca && npm i && npm run generate && npm run build",
    "build:cryptic-utils": "cd libraries/cryptic-utils && npm i && npm run build",
    "bootstrap": "npm run build:base-ca && npm run build:cryptic-utils"
  },
  "husky": {
    "hooks": {}
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true yarn test --bail --findRelatedTests --detectOpenHandles",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.14",
    "@types/nodemon": "^1.19.0",
    "@types/sanitize-html": "^1.27.0",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.7",
    "jest": "^29.7.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.8.8",
    "prisma": "^6.2.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.4.0",
    "base-ca": "file:./libraries/base-ca",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "cryptic-utils": "file:./libraries/cryptic-utils",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "sanitize-html": "^2.3.0",
    "slugify": "^1.4.7",
    "unique-names-generator": "^4.3.1",
    "uuid": "^8.3.2",
    "zod": "^3.20.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
